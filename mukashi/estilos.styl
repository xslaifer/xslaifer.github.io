body
	margin 0
	width 100%
	font-size 16px
	background rgb(41, 45, 46)
	font-family 'Noto Sans', sans-serif
.cabecera
	width 95%
	background rgb(28, 54, 71)
	margin auto
	position relative
	margin-top 4em
.logo_p
	margin 0
	display inline-block
.logo
	width  250.5px
	height 119.5px
	width 250.5px
	padding 0.5em 0 1em 0.5em
form
	position absolute
	right 0
	top 2em
	width 550px
li
	display inline-block
label
	margin-top 0.5em
	color white
	font-size 1.3em
#text
	padding 0.3em 0.2em
	border none
	font-size 1em
	margint-bottom 0.5em
#btn
	padding 0.3em 0.7em
	font-size 1em
	background #140E0E
	color #8B8484
	cursor pointer	
	border none
	font-family 'Montserrat', sans-serif
.seccion
	background #08090C
	width 95%
	margin auto
	margin-top 1em
.contenedor
	width 100%
	padding-top 12em
ul
	display inline-block
nav
	width 100%
	margin auto
	position fixed
	top 0
	z-index 1
	background rgb(41, 45, 46)
.boton
	color #8b8484
	text-decoration none
	font-size 1.2em
	font-family: 'Montserrat', sans-serif;
	cursor pointer
	&:hover
		color white
.portada, .destacados
	display inline-block
.portada
	width 60%
	margin-left 1em
.destacados
	width 28%
	margin-left 5em
	position absolute

.primera_p , .enlace_p
	width 100%
	background white
	margin 0
.destacados_p
	width 100%
	margin 0
.titulos
	background #1c3647
	padding 0.5em 1.5em 0.5em 4em
	display inline-block
	position relative
	color white
	margin-top 2em
.titulos::after
		content ""
		border-right 25px solid transparent
		border-top 2.4em solid #1c3647
		top 0
		left 100%
		position absolute
figcaption
	background rgb(231, 231, 231)
.letras
	padding .5em
	text-align justify
h3
	padding .5em
.imagen
	width 100%
span
	color #8b8484
	text-align right
	font-size 1.2em
	position absolute
	right 2em

#div_tec, #div_vid, #div_misce, #div_noti
	padding-top 3em